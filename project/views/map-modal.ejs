<div id="map" class="modal" style="z-index:9999; position: fixed;top: 50%;left: 50%;transform: translate(-50%, -50%);">
    <span onclick="document.getElementById('map').style.display='none';" class="close" title="Close Modal">x</span>

    <div class="modal-content">
        <div class="modalheader" >
            <h2>See the results!</h2>
        </div>

        <div class="modal-body" style="height:400px">
            <div class="map-container" id="map-container" style="position: relative; width: 100%; height: 100%; margin: 0; padding: 0;"></div>
        </div>
    </div>

</div>

<script>
    var modal = document.getElementById('map');

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
        if (event.target === modal) {
            modal.style.display = "none";
        }
    }
</script>