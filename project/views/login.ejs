<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% include stylesheets.ejs %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="javascripts/login-validator.js"></script>
    <script src="javascripts/login-offline.js"></script>
</head>
<body onload="initialMessageDisplay()">
<div class="main-wrapper">

    <% include header.ejs %>

    <div class="user-form">

        <div class="user-border">

            <div class="user-title">Login</div>

            <div class="user-input-wrapper s-font">

                <div class="offline_div soft-highlight" id="offline_div" style="display: none">You cannot log in when offline!</div>

                <div class="error"><%= error %></div>

                <br>

                <form id="loginForm" action="/login" onsubmit="loginValidate();" method="post">

                    <div class="row login">
                        <div id="uError" class="form-error"></div>
                    </div>

                    <div class="row login">
                        <div class="col-3">
                            <label for='username'>Username:</label>
                        </div>

                        <div class="col-9">
                            <input type="'text" placeholder="Enter user name" name="u" id="u">
                        </div>
                    </div>

                    <br>

                    <div class="row login">
                        <div id="pError" class="form-error"></div>
                    </div>

                    <div class="row login">
                        <div class="col-3">
                            <label for='password'>Password:</label>
                        </div>

                        <div class="col-9">
                            <input type="password" placeholder="Enter password" name="p" id="p">
                        </div>
                    </div>

                    <input type="submit" name="g" value="Login" id="g" class="user-submit">

                    <a href="/forgot-password">Forgot Password</a>

                    <br>
                </form>

            </div>

            <div id="results" style="margin-top:30px"></div>

        </div>

    </div>

    <div class="push"></div>
</div>

<% include footer.ejs %>

</body>
</html>