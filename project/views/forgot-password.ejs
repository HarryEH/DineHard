<!DOCTYPE html>
<html>
<head>
    <title>Forgot Password</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% include stylesheets.ejs %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
<div class="main-wrapper">
    <% include header.ejs %>

    <div class="lForm">
        <div class ="lBorder">
            <div class="lTitle">Forgot Password</div>
            <div class="lInputWrapper">
                <div class = "error"><%= error %></div>
                <br>
                <form id="forgotPasswordForm" action="/forgot-password" method="post">
                    <div class="row login">
                        <div class="col-3">
                        </div>
                        <div class="col-9">
                            <div id="uError"  class="formError"></div>
                        </div>
                    </div>

                    <div class="row login">
                        <div class="col-3">
                            <label for='username'>Username:</label>
                        </div>
                        <div class="col-9">
                            <input type="'text" placeholder="Enter user name" name="username" id="u">
                        </div>
                    </div>

                    <br>
                    <div class="row login">
                        <div class="col-3">
                        </div>
                        <div class="col-9">
                            <div id="pError" class="formError"></div>
                        </div>
                    </div>

                    <input type="submit" name="submit" value="Submit" id="g" class="lSubmit">
                    <br>
                </form>
            </div>
            <div id="results" style="margin-top:30px"></div>
        </div>
    </div>
    <div class="push"></div>
</div>

<% include footer.ejs %>

</body>
</html>